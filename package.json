{
  "name": "insertfilenameascomment",
  "displayName": "Insert Filename as Comment",
  "description": "Inserts the filename or relative path as a comment on save.",
  "icon": "images/giof.png",
  "version": "0.0.9",
  "repository": {
    "type": "git",
    "url": "https://github.com/arnsteinsm/insertfilename.git"
  },
  "publisher": "giof",
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "javascript",
    "typescript",
    "react",
    "filename",
    "comments",
    "insert filename"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Insert Filename as Comment",
      "properties": {
        "insertFilename.fileExtensions": {
          "type": "array",
          "default": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx",
            ".py",
            ".rb",
            ".css",
            ".scss",
            ".less",
            ".html",
            ".htm",
            ".xml",
            ".sh",
            ".bat"
          ],
          "description": "Specifies the file extensions where the filename comment will be added on save."
        },
        "insertFilename.commentStyleMap": {
          "type": "object",
          "default": {
            ".js": "//",
            ".jsx": "//",
            ".ts": "//",
            ".tsx": "//",
            ".py": "#",
            ".rb": "#",
            ".sh": "#",
            ".css": "/* */",
            ".scss": "/* */",
            ".less": "/* */",
            ".html": "<!-- -->",
            ".xml": "<!-- -->",
            ".bat": "@REM"
          },
          "description": "Map file extensions to comment styles. E.g. { \".js\": \"//\", \".py\": \"#\", \".html\": \"<!-- -->\" }. For block comments, include both start and end delimiters separated by a space (e.g., '/* */')."
        },
        "insertFilename.commentStyle": {
          "type": "string",
          "enum": [
            "//",
            "/* */",
            "#",
            "<!-- -->",
            ";"
          ],
          "default": "//",
          "description": "Fallback comment style if the file type is not in 'commentStyleMap'. This setting is overridden by 'commentStyleMap'."
        },
        "insertFilename.usePath": {
          "type": "boolean",
          "default": false,
          "description": "If set to true, the workspace-relative path to the file is used in the comment. If false, only the filename is used."
        }
      }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "npm run compile && node ./out/test/runTest.js",
    "vscode:prepublish": "npm run bundle",
    "bundle": "esbuild src/extension.ts --bundle --outdir=out --platform=node --external:vscode",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.1",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  }
}
